{
  "name": "cinepwa-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/api",
    "apps/web"
  ],
  "scripts": {
    "dev:api": "npm run dev --workspace movies-api",
    "dev:web": "npm run dev --workspace cinepwa-web",
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\"",
    "build:web": "npm run build --workspace cinepwa-web",
    "start:api": "npm start --workspace movies-api",
    "test:e2e": "playwright test"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "concurrently": "^9.0.0"
  }
}
